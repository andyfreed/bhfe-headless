# ===========================================
# BHFE Headless Frontend - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# WordPress GraphQL Endpoint
# Local development: http://beacon-hill-staging.local/graphql
# Production: https://yourdomain.com/graphql
NEXT_PUBLIC_WORDPRESS_URL=http://beacon-hill-staging.local

# Faust.js Secret Key
# Generate in WP Admin > Settings > Faust > Secret Key
# This enables authenticated requests and preview mode
FAUST_SECRET_KEY=your-faust-secret-key-here

# Optional: Enable debug mode in development
# NEXT_PUBLIC_DEBUG=true
